<% include partials/header %>

<div class="container">
    <header class="jumbotron">
        <div class="container">
            <h1><strong>Welcome to YelpCamp</strong></h1>
            <p>View our hand picked campgrounds</p>
            <p><a class = 'btn btn-primary btn-lg' href="/campgrounds/new">Add new Campground</a></p>
            <a href="/">Home</a>
        </div>
    </header>

    
    <div class="row">
        <div class="col-lg-12"><h3>Our most poplar campgrounds</h3></div>
    </div>

    <div class="row" style="display: flex; flex-wrap: wrap;">
        <% campgrounds.forEach(function(campground){ %>
            <div class="col-md-3 col-sm-6">
                <div class="thumbnail">
                    <img src = "<%= campground.image %>" width="600px" height="400px">
                    <div class="caption">
                        <h4><%= campground.name %></h4>
                    </div>
                </div>
                
            </div>
        <% }); %>
    </div>
    
    
</div>
<% include partials/footer %>